# Example environment configuration for Recipe Hub frontend
# Copy this file to `.env` and adjust values as needed.

# Preferred: full backend base URL, e.g. https://api.example.com
REACT_APP_BACKEND_URL=

# Alternative: relative API base path, e.g. /api
REACT_APP_API_BASE=

# Standard node env; if omitted, NODE_ENV is used.
REACT_APP_NODE_ENV=development

# Logging level (info, warn, error, debug)
REACT_APP_LOG_LEVEL=info
